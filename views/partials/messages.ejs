<% if (typeof errors != 'undefined') { %> <% errors.forEach(function(error) { %>
<div class="alert alert-warning fade show mt-5 text-center" role="alert">
	<%= error.msg %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% }); %> <% } %> <% if (success_msg != ''){ %>
<div
	class="alert alert-success  fade show mt-5 text-center"
	role="alert"
>
	<%= success_msg %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% } %> <% if (error_msg != ''){ %>
<div class="alert alert-danger fade show mt-1 text-center" role="alert">
	<%= error_msg %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% } %> <% if (error != ''){ %>
<div class="alert alert-danger fade show mt-1 text-center" role="alert">
	<%= error %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% } %>
